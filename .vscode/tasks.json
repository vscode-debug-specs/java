{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "build",
			"type": "shell",
			"command": "mvn compile",
			"group": "build"
		},
		{
			"taskName": "verify",
			"type": "shell",
			"command": "mvn -B verify",
			"group": "build"
		},
		{
			"taskName": "test",
			"type": "shell",
			"command": "mvn -B test",
			"group": "test"
		}
	]
}